<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/openalbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开" />

        <ImageView
            android:id="@+id/picture"
            android:layout_width="360dp"
            android:layout_height="360dp"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="245dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="165dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/compare"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#00000000"
            android:drawableTop="@drawable/display_contrast"

            android:text="对比" />

        <Button
            android:id="@+id/revoke"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="226dp"
            android:layout_marginRight="7dp"
            android:background="#00000000"
            android:drawableTop="@drawable/revoke"
            android:text="撤销" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fun1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="7dp"
            android:background="#00000000"
            android:drawableTop="@drawable/filter"
            android:text="多彩滤镜"
            android:textSize="12sp" />

        <Button
            android:id="@+id/fun2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#00000000"
            android:drawableTop="@drawable/despeckle"
            android:text="噪点去除"
            android:textSize="12sp" />

        <Button
            android:id="@+id/fun3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#00000000"
            android:drawableTop="@drawable/tran"
            android:text="背景变换"
            android:textSize="12sp" />

        <Button
            android:id="@+id/fun4"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#00000000"
            android:drawableTop="@drawable/remove"
            android:text="抖动去除"
            android:textSize="12sp" />

        <Button
            android:id="@+id/fun6"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"

            android:layout_marginRight="7dp"
            android:background="#00000000"
            android:drawableTop="@drawable/style_tran"
            android:text="风格迁移"
            android:textSize="12sp" />

        <Button
            android:id="@+id/fun5"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#00000000"
            android:drawableTop="@drawable/findreplace"
            android:text="效果提升"
            android:textSize="12sp" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/drop_out"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="7dp"
                android:background="#00000000"
                android:drawableTop="@drawable/close"
                android:textSize="12sp"
                android:text="退出" />

            <Button
                android:id="@+id/download"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:layout_marginRight="40dp"
                android:background="#00000000"
                android:drawableTop="@drawable/download"
                android:textSize="12sp"
                android:text="下载" />

            <Button
                android:id="@+id/share"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="7dp"
                android:background="#00000000"
                android:drawableTop="@drawable/share"
                android:text="分享"
                android:textSize="12sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="97dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/filter1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00000000" />

        <Button
            android:id="@+id/filter2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00000000" />

        <Button
            android:id="@+id/filter3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/filter"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00000000" />

        <Button
            android:id="@+id/filter4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#00000000" />

    </LinearLayout>

    </RelativeLayout>
